{
    "manifest_version": 2,
    "name": "View background image",
    "version": "1.0.4",
    "description": "Adds \"Open background image in new tab\" and \"Save background image as ...\" menu items. Finds closest element to the clicked area that has a background image.",
    "permissions": ["contextMenus", "<all_urls>", "downloads"],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_start"
    }],
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "16": "icons/16.png"
    }
}
